p 4  550 0 0   0 0 0   0 0 550   550 0 550

#Ceiling - white
p 4  550 550 0   550 550 550   0 550 550    0 550 0

#Back wall - white
p 4  550 0 550   0 0 550    0 550 550    550 550 550

#Short block - white
