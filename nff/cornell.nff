# background color 
b 0 0 0

#camera specification
v
from  275 275 -800
at    275 275 0
up 0 1 0
angle 40
hither 0.1
resolution 512 512

#light source
#ls 10 275 530 275
la  200 548 50  150 0 0  0 0 200


#Right wall - green

f 0.2 1 0.2   1 0 0 0 1
p 4   0 0 550     0 0 0      0 550 0      0 550 550

#Left wall - red
f 1 0.2 0.2   1 0 0 0 1
p 4  550 0 0    550 0 550    550 550 550   550 550 0

#Floor - white
